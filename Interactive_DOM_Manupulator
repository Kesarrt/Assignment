<body>

    <h1>Interactive DOM Manipulation</h1>

    <div class="controls">
        <!-- 1. Color Input Section -->
        <div class="input-group">
            <label for="color-input">Background Color:</label>
            <input type="text" id="color-input" placeholder="e.g., red, #00ff00, rgb(0,0,255)">
            <button id="change-bg-btn">Change Background</button>
        </div>

        <hr style="width: 100%; border: 0; border-top: 1px solid #eee;">

        <!-- 2. Text Input Section -->
        <div class="input-group">
            <label for="text-input">Div Content:</label>
            <input type="text" id="text-input" placeholder="Type new text here...">
            <button id="update-text-btn">Update Text</button>
        </div>
    </div>

    <!-- 5. The Target Div -->
    <div id="target-box">Initial Text Content</div>

    <script>
        // --- Select Elements ---
        const colorInput = document.getElementById('color-input');
        const changeBgBtn = document.getElementById('change-bg-btn');
        
        const textInput = document.getElementById('text-input');
        const updateTextBtn = document.getElementById('update-text-btn');
        
        const targetBox = document.getElementById('target-box');

        // --- Helper Function: Validate Color ---
        // This creates a temporary element to see if the browser accepts the color string
        function isColorValid(color) {
            if (!color) return false;
            const temp = document.createElement('div');
            temp.style.color = color;
            return temp.style.color !== '';
        }

        // --- TASK 1: Change Background Logic ---
        changeBgBtn.addEventListener('click', function() {
            const colorValue = colorInput.value.trim();

            if (isColorValid(colorValue)) {
                targetBox.style.backgroundColor = colorValue;
                // Optional: Change text color to white if background is dark could be added here
            } else {
                alert("Invalid color name!");
            }
        });

        // --- TASK 2: Update Text Logic ---
        updateTextBtn.addEventListener('click', function() {
            const textValue = textInput.value.trim();

            if (textValue !== "") {
                targetBox.textContent = textValue;
            } else {
                alert("Please enter some text!");
            }
        });
    </script>
</body>

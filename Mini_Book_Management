<body>

    <!-- ----------------- NAVIGATION ----------------- -->
    <nav>
        <h2>ðŸ“š Admin Dashboard</h2>
        <a href="index.html" class="nav-link">Home</a>
    </nav>

    <!-- ----------------- ADD BOOK FORM ----------------- -->
    <div class="form-container">
        <form id="book-form">
            <div class="form-group">
                <label>Title</label>
                <input type="text" id="title" placeholder="Enter book title" required>
            </div>

            <div class="form-group">
                <label>Author</label>
                <input type="text" id="author" placeholder="Enter author name" required>
            </div>

            <div class="form-group">
                <label>Category</label>
                <select id="category">
                    <option value="Fiction">Fiction</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Technical">Technical</option>
                </select>
            </div>

            <button type="submit" class="add-btn">Add Book</button>
        </form>
    </div>

    <!-- ----------------- FILTER & SORT ----------------- -->
    <div class="controls">
        <select id="filter-category">
            <option value="All">Filter By Category: All</option>
            <option value="Fiction">Fiction</option>
            <option value="Comedy">Comedy</option>
            <option value="Technical">Technical</option>
        </select>

        <button id="sort-asc" class="control-btn">Sort A â†’ Z</button>
        <button id="sort-desc" class="control-btn">Sort Z â†’ A</button>
    </div>

    <!-- ----------------- BOOK GRID ----------------- -->
    <div id="book-grid" class="grid-container"></div>

    <script>
        /* ----------------- DATA & INITIAL LOAD ----------------- */
        let bookList = JSON.parse(localStorage.getItem('bookData')) || [];

        const DEFAULT_IMG = "https://m.media-amazon.com/images/I/71ZB18P3inL._SY522_.jpg";

        const grid = document.getElementById("book-grid");
        const form = document.getElementById("book-form");
        const filterSelect = document.getElementById("filter-category");

        /* ----------------- DISPLAY FUNCTION ----------------- */
        function displayBooks(data) {
            grid.innerHTML = "";

            data.forEach(book => {
                const card = document.createElement("div");
                card.classList.add("book-card");

                const img = document.createElement("img");
                img.src = book.imageUrl;

                const infoDiv = document.createElement("div");
                infoDiv.classList.add("card-info");

                const titleEl = document.createElement("h3");
                titleEl.classList.add("card-title");
                titleEl.innerText = book.title;

                const authorEl = document.createElement("p");
                authorEl.classList.add("card-author");
                authorEl.innerText = `By ${book.author}`;

                const categoryEl = document.createElement("span");
                categoryEl.classList.add("card-category");
                categoryEl.innerText = book.category;

                const delBtn = document.createElement("button");
                delBtn.classList.add("delete-btn");
                delBtn.innerText = "Delete";
                delBtn.addEventListener("click", () => deleteBook(book.id));

                infoDiv.append(titleEl, authorEl, categoryEl);
                card.append(img, infoDiv, delBtn);
                grid.appendChild(card);
            });
        }

        /* ----------------- ADD BOOK ----------------- */
        form.addEventListener("submit", e => {
            e.preventDefault();

            const newBook = {
                id: Date.now(),
                title: title.value,
                author: author.value,
                category: category.value,
                imageUrl: DEFAULT_IMG
            };

            bookList.push(newBook);
            localStorage.setItem("bookData", JSON.stringify(bookList));

            filterSelect.value = "All";
            displayBooks(bookList);

            form.reset();
        });

        /* ----------------- DELETE BOOK ----------------- */
        function deleteBook(id) {
            bookList = bookList.filter(book => book.id !== id);
            localStorage.setItem("bookData", JSON.stringify(bookList));
            handleFilter();
        }

        /* ----------------- FILTER ----------------- */
        function handleFilter() {
            const selected = filterSelect.value;

            if (selected === "All") {
                displayBooks(bookList);
            } else {
                const filtered = bookList.filter(b => b.category === selected);
                displayBooks(filtered);
            }
        }

        filterSelect.addEventListener("change", handleFilter);

        /* ----------------- SORT ----------------- */
        document.getElementById("sort-asc").addEventListener("click", () => {
            bookList.sort((a, b) => a.title.localeCompare(b.title));
            localStorage.setItem("bookData", JSON.stringify(bookList));
            handleFilter();
        });

        document.getElementById("sort-desc").addEventListener("click", () => {
            bookList.sort((a, b) => b.title.localeCompare(a.title));
            localStorage.setItem("bookData", JSON.stringify(bookList));
            handleFilter();
        });

        /* ----------------- INITIAL PAGE LOAD ----------------- */
        displayBooks(bookList);
    </script>

</body>

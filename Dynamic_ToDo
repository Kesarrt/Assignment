<body>

    <div class="todo-container">
        <h2>My To-Do List</h2>

        <!-- Input Section -->
        <div class="input-group">
            <input type="text" id="task-input" placeholder="Enter a new task...">
            <button id="add-btn">Add Task</button>
        </div>

        <!-- Task List -->
        <ul id="task-list">
            <!-- Tasks will be added here dynamically -->
        </ul>
    </div>

    <script>
        // Select DOM Elements
        const taskInput = document.getElementById('task-input');
        const addBtn = document.getElementById('add-btn');
        const taskList = document.getElementById('task-list');

        // Function to create a new task
        function addTask() {
            const taskValue = taskInput.value.trim();

            // Validation: Check for empty input
            if (taskValue === "") {
                alert("Please enter a task!");
                return;
            }

            // 1. Create List Item (li)
            const li = document.createElement('li');

            // 2. Create Task Text (span)
            const span = document.createElement('span');
            span.textContent = taskValue;
            span.className = "task-text";
            li.appendChild(span);

            // 3. Create Button Group Container
            const btnGroup = document.createElement('div');
            btnGroup.className = "btn-group";

            // 4. Create "Complete" Button
            const completeBtn = document.createElement('button');
            completeBtn.textContent = "Complete";
            completeBtn.className = "action-btn complete-btn";
            
            // Event Listener for Completing Task
            completeBtn.addEventListener('click', function() {
                span.classList.toggle('completed');
            });

            // 5. Create "Delete" Button
            const deleteBtn = document.createElement('button');
            deleteBtn.textContent = "Delete";
            deleteBtn.className = "action-btn delete-btn";

            // Event Listener for Deleting Task
            deleteBtn.addEventListener('click', function() {
                taskList.removeChild(li);
            });

            // Assemble the buttons
            btnGroup.appendChild(completeBtn);
            btnGroup.appendChild(deleteBtn);
            
            // Add buttons to LI
            li.appendChild(btnGroup);

            // Add LI to the main UL
            taskList.appendChild(li);

            // Clear Input field
            taskInput.value = "";
        }

        // Add Event Listener to Add Button
        addBtn.addEventListener('click', addTask);

        // Optional: Allow pressing "Enter" key to add task
        taskInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                addTask();
            }
        });
    </script>
</body>
